<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Operator.Views.PhotoListView">
    <StackLayout>
        <ListView ItemsSource="{Binding Photos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Image}" WidthRequest="50" BackgroundColor="Black"/>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding Date}"/>
                            <Label Text="{Binding Size}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Text="&lt;" Command="{Binding PreviousPageCommand}" HeightRequest="50"/>
            <Button Text="&gt;" Grid.Column="1" Command="{Binding NextPageCommand}" HeightRequest="50"/>
        </Grid>
    </StackLayout>
</ContentPage>