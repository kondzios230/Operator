<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Operator.Views.PhotoListView">
    <StackLayout>
        <ListView ItemsSource="{Binding Photos}" HeightRequest="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding ImagePath}" WidthRequest="50" BackgroundColor="Black"/>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding Date}"/>
                            <Label Text="{Binding Size}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Next" Command="{Binding NextPageCommand}" HeightRequest="25"/>
    </StackLayout>
</ContentPage>